{
  "name": "@raingauge/flow",
  "version": "0.0.0-prerelease.0",
  "description": "An event library for managing the window state, gesture and drag-and-drop events",
  "keywords": [
    "browser",
    "drag",
    "drag-and-drop",
    "event",
    "event management",
    "gestures",
    "pinch",
    "resize",
    "rotate",
    "scroll",
    "swipe",
    "typescript",
    "window",
    "window state",
    "zoom",
    "raingauge media",
    "raingauge",
    "rgm"
  ],
  "license": "MIT",
  "author": "RainGauge Media",
  "contributors": [
    {
      "name": "Jaron White"
    }
  ],
  "main": "./index.js",
  "module": "./esm/index.js",
  "browser": "./umd/index.min.js",
  "types": "./index.d.ts",
  "exports": {
    "require": "./index.js",
    "import": "./esm/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RainGaugeMedia/flow.git"
  },
  "scripts": {
    "build": "npm run build:main && npm run build:umd && npm run build:min && npm run bundle:dts",
    "build:main": "tsc",
    "build:min": "terser ./dist/umd/index.js -o ./dist/umd/index.min.js -c -m --source-map `content='./dist/umd/index.js.map'`",
    "build:types": "tsc --emitDeclarationOnly",
    "build:umd": "rollup -i ./src/index.ts -f umd -o ./dist/umd/index.js -p '@rollup/plugin-typescript={compilerOptions: {module: \"es6\"}}' -n raingauge -m",
    "bundle:dts": "rollup -i ./dist/index.d.ts -f es -o ./dist/umd/index.d.ts -p rollup-plugin-dts",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src/**/*.ts",
    "preversion": "run-s typecheck format lint test",
    "test": "run-p typecheck test:js",
    "test:js": "mocha -r ts-node/register src/**/*.spec.ts",
    "typecheck": "tsc --noEmit",
    "version": "npm run build"
  },
  "devDependencies": {
    "@raingauge/cli": "^0.0.0-prerelease.0",
    "@rollup/plugin-typescript": "8.3.1",
    "@types/chai": "4.3.0",
    "@types/mocha": "9.1.0",
    "@types/node": "17.0.14",
    "@types/sinon": "10.0.9",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "chai": "4.3.6",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "mocha": "9.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "rollup": "2.70.1",
    "terser": "5.10.0",
    "sinon": "13.0.1",
    "ts-node": "10.4.0",
    "typescript": "4.5.5"
  },
  "files": [
    "dist/**/*"
  ]
}

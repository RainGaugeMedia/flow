{
  "name": "@raingauge/flow",
  "version": "0.0.0-prerelease.0",
  "description": "An event library for managing the window state, gesture and drag-and-drop events",
  "keywords": [
    "browser",
    "drag",
    "drag-and-drop",
    "event",
    "event management",
    "gestures",
    "pinch",
    "resize",
    "rotate",
    "scroll",
    "swipe",
    "typescript",
    "window",
    "window state",
    "zoom",
    "raingauge media",
    "raingauge",
    "rgm"
  ],
  "license": "MIT",
  "author": "RainGauge Media",
  "contributors": [
    {
      "name": "Jaron White"
    }
  ],
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/umd/index.min.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/esm/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RainGaugeMedia/flow.git"
  },
  "scripts": {
    "build": "run-p build:main build:bundle",
    "build:main": "tsc",
    "build:types": "tsc --emitDeclarationOnly",
    "build:bundle": "rollup -c",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src/**/*.ts",
    "preversion": "run-s typecheck format lint test",
    "test": "run-p typecheck test:js",
    "test:js": "mocha -r ts-node/register src/**/*.spec.ts",
    "typecheck": "tsc --noEmit",
    "version": "npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/chai": "^4.3.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.14",
    "@types/sinon": "^10.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "chai": "^4.3.6",
    "compression": "^1.7.4",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "express": "^4.18.2",
    "mocha": "^9.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "sinon": "^13.0.1",
    "terser": "^5.10.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.7.4"
  },
  "files": [
    "dist/**/*"
  ]
}
